<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profil rasmi -->
        <ImageView
            android:id="@+id/imgProfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/profil_ic"
        android:layout_marginBottom="16dp"
        android:contentDescription="Profil rasmi" />

        <!-- Ism -->
        <TextView
            android:id="@+id/tvIsm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ism: Zunuraxon"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: zunura@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Telefon -->
        <TextView
            android:id="@+id/tvTelefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefon: +998 90 123 45 67"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Ish tajribasi -->
        <TextView
            android:id="@+id/tvIshTajribasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ish tajribasi: 5 yil"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Tahrirlash tugmasi -->
        <Button
            android:id="@+id/btnEditProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tahrirlash"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
