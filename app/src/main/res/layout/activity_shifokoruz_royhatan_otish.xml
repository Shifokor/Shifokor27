<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Sarlavha -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ro'yxatdan o'tish"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="24dp" />

        <!-- Ism -->
        <EditText
            android:id="@+id/etRegisterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ismingiz"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Telefon raqami -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+998"
                android:textSize="16sp"
                android:paddingRight="8dp" />

            <EditText
                android:id="@+id/etRegisterPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Telefon raqami"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />
        </LinearLayout>

        <!-- Tug‘ilgan sana -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tug‘ilgan sana"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:text="YYYY-MM-DD"
            android:textColor="#555555"
            android:gravity="center_vertical" />

        <!-- Mutaxassislik -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mutaxassislik"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spSpecialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Viloyat -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viloyat"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Shahar -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shahar"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <!-- Ro‘yxatdan o‘tish tugmasi -->
        <Button
            android:id="@+id/btnDoRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ro'yxatdan o'tish"
            android:layout_marginTop="24dp"
            android:backgroundTint="#32C96E"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>