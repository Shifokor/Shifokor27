<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Sarlavha -->
        <TextView
            android:id="@+id/tvDoctorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foydalanuvchi"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="24dp" />

        <!-- Ism -->
        <EditText
            android:id="@+id/etLoginName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ism (ro‘yxatda ko‘rsatilgan)"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Telefon raqam -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+998"
                android:textSize="16sp"
                android:paddingRight="8dp" />

            <EditText
                android:id="@+id/etLoginPhone1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Telefon raqami"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />
        </LinearLayout>

        <!-- Kirish tugmasi -->
        <Button
            android:id="@+id/btnLogin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirish"
            android:layout_marginTop="24dp"
            android:backgroundTint="#007AFF"
            android:textColor="#FFFFFF" />

        <!-- Yangi foydalanuvchi uchun -->
        <TextView
            android:id="@+id/tvNoAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profilingiz yo‘qmi?"
            android:textStyle="italic"
            android:layout_marginTop="32dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnGoToRegister1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ro‘yhatdan o‘tish"
            android:layout_marginTop="8dp"
            android:backgroundTint="#32C96E"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>